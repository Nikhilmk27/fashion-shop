<!-- categories -->

<div class="container mt-4">
  <h2 class="text-center mb-4">Categories</h2>
  <div class="row">
    <% category.forEach(category => { %> 
      <!-- Shirts Card -->
      <div class="col-md-4 mb-4 mt-3">
        <a href="/getProductCategory/<%= category._id  %>" style="text-decoration: none;">
        <div class="card border-0 h-100 bg-transparent">
          <img src="/admin/category/<%= category.image %>" class="card-img-top rounded-circle" alt="Category Image" style="height: 400px"> <!-- Change from 'product' to 'category' -->
          <div class="card-body text-center">
            <h5 class="card-title"><%= category.name %></h5> <!-- Change from 'product' to 'category' -->
            <p class="card-text"><%= category.description %></p> <!-- Change from 'product' to 'category' -->
            <!-- <a href="/shirts" class="btn btn-primary">Shop</a> -->
          </div>
        </div>
      </a>
      </div>
    <% }); %> 
  </div>
</div>



<!-- end categories   -->



    <!-- products -->
    
    <div class="container mt-4">
      <h2 class="text-center mb-4">Featured Products</h2>
      <div class="row">
          <% product.forEach(product => { %>
          <!-- Product Card -->
      <div class="col-md-4 mb-4">
              <div class="card">
                  <a href="/getProductView/<%= product.id %>"> <!-- Wrap image inside anchor tag -->
                      <img src="/admin/products/<%= product.image %>" class="card-img-top" alt="Product Image">
                  </a>    
                  <div class="card-body">
                      <h5 class="card-title"><%= product.name %></h5>
                      <p class="card-text"><%= product.description %></p>
                      <a href="/getProductView/<%= product.id %>" class="btn btn-primary">View Product</a> <!-- Link to product view page -->
                  </div>
              </div>
          </div>
          <% }); %>
      </div>
  </div>
  

   
