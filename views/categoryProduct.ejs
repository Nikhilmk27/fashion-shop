    <div class="container mt-4">
      <h2 class="text-center mb-4"></h2>
        <div class="row">
          <% product.forEach(product => { %>
            <!-- Shirts Card -->
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="/admin/products/<%= product.image %>" class="card-img-top" alt="Shirts">
                    <div class="card-body">
                        <h5 class="card-title"><%= product.name %></h5>
                        <p class="card-text"><%= product.description %></p>
                        <a href="/shirts" class="btn btn-primary">Shop</a>
                    </div>
                </div>
            </div>
            <% }); %>

           

            
        </div>
    </div>

   
