            <!-- Cart icon -->
  <li class="nav-item">
  <a class="nav-link" href="/addToCart">
      <i class="fas fa-shopping-cart"></i>
      <!-- Cart icon -->
      <span id="cartItemCount" class="badge bg-secondary"></span> <!-- Display cart count here -->
  </a>
  </li>
  
            <li class="nav-item">
              <a class="nav-link" href="#">
