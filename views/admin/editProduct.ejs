<%- include('../partials/adminHeader') %>

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Product Form</title>
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />
    <style>
      /* Custom styles for the shadow box and reduced width */
      .custom-shadow-box {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin: 0 auto; /* Center the box horizontally */
        max-width: 600px; /* Set the maximum width */
        background-color: #fff; /* Set background color */
        border-radius: 8px; /* Optional: Add border-radius for rounded corners */
        margin-top: 50px; /* Optional: Add margin-top for space from top */
      }
    </style>
  </head>
  <body>
    <div class="container mt-5">
      <div class="custom-shadow-box">
        <h2 class="text-center">edit Product</h2>
        <form
          action="/edit_product/<%= product._id %>"
          method="post"
          enctype="multipart/form-data"
        >
          <!-- Your form content goes here -->
          <!-- Product Name -->
          <div class="form-group">
            <label for="productName">Product Name:</label>
            <input
              type="text"
              class="form-control"
              id="productName"
              name="name"
              value="<%= product.name %>"
              required
            />
          </div>

          <!-- Product Description -->
          <div class="form-group">
            <label for="productDescription">Product Description:</label>
            <textarea
              class="form-control"
              id="productDescription"
              value=""
              name="description"
              required
            ><%= product.description %></textarea>
          </div>

          <!-- Rich Description -->
          <div class="form-group">
            <label for="richDescription">Rich Description:</label>
            <textarea
              class="form-control"
              id="richDescription"
              name="richDescription"
              value=""
            ><%=  product.richDescription%></textarea>
          </div>

          <!-- Product Image -->
          <div class="form-group">
            <label for="productImage">Product Image:</label>
            <input
              type="file"
              class="form-control-file"
              id="productImage"
              name="image"
              accept="image/*"
            />
            <img
            src="/admin/products/<%= product.image %>"
            width="100"
            class="img-thumbnail mt-1"
          />
          <input
            type="hidden"
            name="oldimage"
            value="<%= product.image %>"
          />

          </div>

          <!-- Other Product Details (Brand, Price, etc.) -->

          <!-- Category -->
          <div class="form-group">
            <label for="category">Category:</label>
            <!-- Assuming you have a dropdown for selecting categories -->
            <select class="form-control" id="category" name="category" required>
              <!-- Options for categories -->
              <option value="65b0a527c5260bf6059ec4bb">shirts</option>
                    <option value="65b0a545c5260bf6059ec4c1">trousers</option>
                    <option value="65b0b9d6c5260bf6059ec4fc">t-shirts</option>
              <!-- Add more options based on your categories -->
            </select>
          </div>

          <!-- Count in Stock -->
          <div class="form-group">
            <label for="countInStock">price</label>
            <input
              type="number"
              class="form-control"
              id="countInStock"
              name="price"
              value="<%= product.price %>"
              required
              
            />
          </div>
          <!-- Count in Stock -->
          <div class="form-group">
            <label for="countInStock">brand</label>
            <input
              type="text"
              class="form-control"
              id="countInStock"
              name="brand"
              value="<%= product.brand %>"
              required
              
            />
          </div>
          <!-- Count in Stock -->
          <div class="form-group">
            <label for="countInStock">rating</label>
            <input
              type="number"
              class="form-control"
              id="countInStock"
              name="rating"
              value="<%= product.rating %>"
              min="0"
              max="5"
            />
          </div>
          <!-- Count in Stock -->
          <div class="form-group">
            <label for="countInStock">num reviews:</label>
            <input
              type="number"
              class="form-control"
              id="countInStock"
              name="numReviews"
              value="<%= product.numReviews %>"
            />
          </div>
          <!-- Count in Stock -->
          <div class="form-group">
            <label for="countInStock">date created:</label>
            <input
              type="date"
              class="form-control"
              id="countInStock"
              name="dateCreated"
              value="<%= product.dateCreated %>"
            />
          </div>
          <!-- Count in Stock -->
          <div class="form-group">
            <label for="countInStock">Count in Stock:</label>
            <input
              type="number"
              class="form-control"
              id="countInStock"
              name="countInStock"
              value="<%= product.countInStock %>"
              min="0"
              max="300"
            />
          </div>

          <!-- Add more fields based on your schema -->

          <!-- Submit Button -->
          <button type="submit" class="btn btn-primary btn-block">
            edit Product
          </button>
        </form>
      </div>
    </div>

    <!-- Bootstrap JS and jQuery (for form validation) -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  </body>
</html>

<%- include('../partials/adminFooter') %>
