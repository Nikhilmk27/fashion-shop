
    <%- include('../partials/adminNav') %>
    <!-- backgrond image -->
    <h3 class="mt-2" style="text-align: center; color: rgb(47, 47, 126);">welcome to category page</h3>
   
    <style>
        /* Optional: Add some basic styling to make the link look like a button */
        .button-link {
            display: inline-block;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            background-color: #007bff;
            color: #fff;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>


<!-- Button as a link -->
<div  style="display: flex; justify-content: flex-end; margin-top: 20px; margin-right: 10px;">
  <a href="/admin/get_addCategory" class="button-link">add category</a>
</div>



  
   
    
<!-- table to  display the categor data -->
<div class="container mt-5">
  <h2 style="color:rgb(47, 47, 126) ;">category  List</h2>
  
  <% if ( categories!= "") { %>
    <table class="table table-striped">
      <thead>
        <tr>
          
          <th>Image</th>
          <th>Name</th>
          <th>Action</th>
         
        </tr>
      </thead>
      <tbody>
        <!-- Replace this part with data retrieved from the database -->
        <% categories.forEach((category) => { %>
          <tr>
           
            <td><img src="/admin/category/<%= category.image %>" alt="User Image" width="50" class="img-thumbnail"></td>
            <td><%= category.name %></td>
            
            <td>
              <a href="/delete_category/<%= category._id %>" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i> Delete</a>
              <a href="/edit_category/<%= category._id %>" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i> Edit</a>
            </td>
          </tr>
        <% }) %>
        <!-- Add more rows for each user -->
      </tbody>
    </table>
  <% } else{%>
    <h1 class="text-center text-secondary mt-5">no data found in the db!</h1>
  <%} %>
</div>


  
    

   
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
