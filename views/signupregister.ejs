    <script>
     


  $(document).ready(function () {
    let nameValid = false;
    let emailValid = false;
    let passValid = false; // Fixed variable name

    $('#name').keyup(function () {
      let name = $('#name').val();
      if (name == '') {
        $('#usererror').html('Name cannot be empty');
      } else {
        $('#usererror').html('');
        nameValid = true;
      }
      updateButtonState();
    });

    // email validation
    $("#email").keyup(function () {
      let email = $("#email").val();
      let emailRegex = /^[A-Za-z0-9_!#$%&'*+\/=?`{|}~^.-]+@[A-Za-z0-9.-]+$/gm;
      if (email == "") {
        $("#emailerror").html("Email cannot be empty");
      } else if (!emailRegex.test(email)) {
        $("#emailerror").html("Invalid email");
      } else {
        $("#emailerror").html("");
        emailValid = true;
      }
      updateButtonState();
    });

    // password validation (assuming similar validation as other fields)
    $("#password").keyup(function () {
      let password = $("#password").val();
      // Your password validation logic goes here...
      // For example:
      if (password.length < 8) {
        $("#passworderror").html("Password must be at least 8 characters");
      } else {
        $("#passworderror").html("");
        passValid = true;
      }
      updateButtonState();
    });

    // Function to update button state
    function updateButtonState() {
      if (nameValid && emailValid && passValid) {
        $("#signup").prop("disabled", false);
      } else {
        $("#signup").prop("disabled", true);
      }
    }
  });
</script>



