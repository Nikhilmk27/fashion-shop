<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Checkout</title>
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <style>
        
        * {
    padding: 0;
    margin: 0;
    color: rgb(27, 8, 168);
    
}
.navbar {
    margin-left: 0;
    margin-right: 0;
}


    </style>
  </head>
  <body>
    <div class="container-fluid px-0">
        <nav class="navbar justify-content-between px-0 bg-danger">
            <a class="navbar-brand text-white">MensFahion</a>
            <ul>
                <li class="nav-item">
                    <a class="nav-link" href="/addToCart">
                        <i class="fas fa-shopping-cart"></i>
                        <!-- Cart icon -->
                        <span id="cartItemCount" class="badge bg-dark"></span> <!-- Display cart count here -->
                    </a>
                  </li>
            </ul>
        </nav>
        
    </div>
    
   
    <div class="container">
      <h1 class="my-4">Checkout</h1>
      <div class="row d-flex justify-content-around">
        
        <div class=" col-md-5 shadow p-4 mb-4 bg-white " >
          

          <h3>delivery</h3>
          <form action="/order" method="post">
            
          <div class="mb-3">
            
            <input
              type="email"
              class="form-control"
              id="email"
              placeholder="Enter your email"
              name="email"
              required
            />
          </div>
            <div class=" d-flex justify-content-between mb-3">
              <div>
              <input
                type="text"
                class="form-control"
                id="name"
                placeholder="first name"
                name="firstName"
                style="max-width: 250px;"
                required
              />
            </div>
            <div >
              
              <input
                type="text"
                class="form-control"
                id="name"
                placeholder="last name"
                name="lastName"
                style="max-width: 250px;"
                required
              />
            </div>
            </div>
            <div class="mb-3">

              <select class="form-select" id="country" name="country" required>
                <option value="">Select Country</option>
                <option value="india">india</option>
               
              </select>
            </div>
            
            <div class="mb-3">
              
              <textarea
                class="form-control"
                id="address"
                rows="3"
                placeholder="Enter your address"
                name="address"
                required
              ></textarea>
            </div>
            <div class=" d-flex justify-content-between mb-3">
              <div>
              <input
                type="text"
                class="form-control"
                id="name"
                placeholder="City"
                name="city"
                style="max-width: 250px;"
                required
              />
            </div>
            <div >
              
              <select class="form-select" id="state" name="state" required>
                <option value="">Select state</option>
                <option value="india">kerala</option>
                <option value="india">karnataka</option>
               
              </select>
            </div>
            <div >
              
              <input
                type="text"
                class="form-control"
                id="name"
                placeholder="pin code"
                name="pincode"
                style="max-width: 150px;"
                required
              />
            </div>
            </div>
            <div class="mb-3">
            
              <input
                type="number"
                class="form-control"
                id="phone"
                name="phone"
                placeholder="phone number"

                required
              />
            </div>
              
              <a href="#"><button style="margin-bottom: 10px;">save address for future use</button></a>
            <div class="mb-3">
              
              <select class="form-select" id="paymentMethod" name="paymentMethod" required>
                <option value="">Select Payment Method</option>
                <option value="creditCard">Credit Card</option>
                <option value="debitCard">Debit Card</option>
                <option value="paypal">PayPal</option>
              </select>
            </div>
            <button type="submit" class="btn btn-primary" >Place Order</button>
          </form>
        </div>
        
        <div class="col-md-5 shadow p-4 mb-4 bg-white">
          <h3>Order Summary</h3>
          <div class="container">
            <h1>Cart</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Product</th>
                        <th scope="col">image</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Price</th>
                       
                    </tr>
                </thead>
               
                <tbody>
                    <% let totalPrice = 0; %>
                    
                    <% cartItems.forEach(item => { %>
                        
                        <tr>
                            <td><%= item.productId.name %></td>
                            <td><img src="/admin/products/<%= item.productId.image %>" alt="" style="width: 50px; height: 50px;"></td>
    
                            <td>
                                
                           
                                <%= item.quantity %>
                                <!-- Increment button -->
                                
                                
                            </td>
                            
                            
                            <td>$<%=  item.quantity * item.productId.price; %></td>
                            
                        </tr>
                        <% totalPrice += item.quantity * item.productId.price; %>
                    <% }); %>
                    <!-- <tr>
                        <td colspan="4" class="text-end">Total Price: $<%= totalPrice %></td>
                    </tr> -->
                    <td>Total Price: </td>
                    <td></td>
                    <td></td>
                  <td class="text-start">$<%= totalPrice %></td>
                  <td></td>
    
                </tbody>
    
            </table>
        </div>
        </div>
      
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
